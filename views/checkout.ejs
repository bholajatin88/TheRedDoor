<!DOCTYPE html>
<html lang="en">
	<meta charset="UTF-8">
		<title>Checkout</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="css/home.css">
	<link rel="stylesheet" href="css/foodMenu.css">
    <link rel="stylesheet" href="css/checkout.css">
	<body class="bodyBackground">
	<div class="navBg">
		<nav class="navBar">
			<img class="logoImg">
			<span class="navLink">
				<a href="/home">Home</a>
				<a href="/menu">Menu</a>
				<a href="/about">About Us</a>
				<a href="/contact">Contact Us</a>
				<% if(!userInitial) { %>
					<a href="/login">Login/Register</a>
				<% } %>
			</span>
			<% if(userInitial) { %>
                <div class="box">
				    <div class="bar"><%=userInitial%></div>
                </div>
			<% } %>
			<ul class="menubar-list">
				<li class="mobile"><a href="/home">Home</a></li>
				<li class="mobile"><a href="/menu">Menu</a></li>
				<li class="mobile"><a href="/about">About Us</a></li>
				<li class="mobile"><a href="/contact">Contact Us</a></li>
				<% if(!userInitial) { %>
					<li class="mobile"><a href="/login">Login/Register</a></li>
				<% } else { %>
					<li><a href="/editprofile">Edit Profile</a></li>
					<li><a href="/logout">LogOut</a></li>
				<% } %>
			</ul>
		</nav>
	</div>
	<main>
		<div id="site">
            <h1 class="bold">Checkout</h1>
            <% if(!cartItems || cartItems.length == 0) { %>
                <div class="no-items">Add Items in cart to checkout!!</div>
                <div class="backBtn">	
                    <a href="/menu" class="back">Order Now</a>
                </div>
            <% } else { %>
                <table id="checkout-cart" class="shopping-cart">
                    <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Qty</th>
                        <th scope="col">Price</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<cartItems.length;i++) { %>
                            <tr>
                                <td><%= cartItems[i].item_name %></td>
                                <td><%= cartItems[i].qty %></td>
                                <td><%= cartItems[i].total_price %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <div id="pricing">
                    <p id="sub-total">
                    <strong>Order Total</strong>: <span id="stotal"></span>
                    </p>
                </div>

                <form action="" method="post" id="checkout-order-form">
                    <h2>Order Delivery Address</h2>
                    <div class="address-form">
                        <form action="/register" method="POST">
                    </div>
                    <input type="submit" id="submit-order" value="Submit" class="btn btn-danger">
                </form>
            <% } %>
        </div>
	</main>
</body>
</html>