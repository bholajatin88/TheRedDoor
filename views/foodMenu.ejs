<html>
<head>
	<title>Food Menu</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
	<link rel="stylesheet" href="css/foodMenu.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="js/bootstrap-input-spinner.js"></script>
	<script src="js/foodMenu.js"></script>
	
	
</head>
<body class="bodyBackground">
	<div class="navBg">
		<nav class="navBar">
			<img class="logoImg">
			<span class="navLink">
				<a href="/home">Home</a>
				<a class="menu-item-selected" href="/menu">Menu</a>
				<a href="/about">About Us</a>
				<a href="/contact">Contact Us</a>
				<% if(!userInitial) { %>
					<a href="/login">Login/Register</a>
				<% } %>
			</span>
			<% if(userInitial) { %>
				<div class="bar"><%=userInitial%></div>
			<% } %>
			<ul class="menubar-list">
				
				<li class="mobile"><a href="/home">Home</a></li>
				<li class="menu-item-selected mobile"><a href="/menu">Menu</a></li>
				<li class="mobile"><a href="/about">About Us</a></li>
				<li class="mobile"><a href="/contact">Contact Us</a></li>
				<% if(!userInitial) { %>
					<li class="mobile"><a href="/login">Login/Register</a></li>
				<% } else { %>
					<li><a href="/logout">LogOut</a></li>
				<% } %>
			</ul>
		</nav>
		<main class="mainContent">
			<div class="menuHeader">Menu
				<hr class="menu-hr">
				<div class="menu-background">
					<div class="menu-content">
					<div class="circle70"></div>
						<div class="menu-head">Italian</div>
						<div class="circle350"></div>
						<div class="foodImgDiv displayTableCell floatRight"><img src="images/Lasagna.jpg" class="foodImg"></div>
						<div class="menu-items">
							<% for (var i=0; i<italian_dishes.length; i++){ %>
						
								<div class="menu-item-content">
									<input type="hidden" name="selectedItem" id="selectedItem" value="<%= JSON.stringify(italian_dishes[i]) %>"/>
									<div class="displayTableCell"><a data-toggle="modal" data-target="#myModal" class="itemNameLink"><%= italian_dishes[i].item_name %></a>
										<% if (italian_dishes[i].is_chef_special) { %> 
											<img class="chefImg">
										<%}%>
										<% if (italian_dishes[i].is_veg) { %> 
											<img class="vegImg">
										<%}%>
										<% for (var j=0; j<italian_dishes[i].spice_level; j++){ %>	
											<img class="chiliImg">
										<%}%>
									</div>
										<div class="menu-classic-dot"></div>
										<div class="displayTableCell">$<%= italian_dishes[i].item_price %></div>
										<div class="menu-item-desc"><%= italian_dishes[i].item_description %></div>
								</div>
							
							<%}%>
							
						</div>
						<div class="menu-head">Chinese</div>
						<div class="circleleft"></div>
						<div class="displayTableCell foodImgDiv floatLeft marginLeft4"><img src="images/LobsterNoodles.jpg" class="foodImg"></div>
						<div class="menu-items-right">
							<% for (var i=0; i<chinese_dishes.length; i++){ %>
						
								<div class="menu-item-content">
									<input type="hidden" name="selectedItem" id="selectedItem" value="<%= JSON.stringify(chinese_dishes[i]) %>"/>
									<div class="displayTableCell"><a data-toggle="modal" data-target="#myModal" class="itemNameLink"><%= chinese_dishes[i].item_name %></a>
										<% if (chinese_dishes[i].is_chef_special) { %> 
											<img class="chefImg">
										<%}%>
										<% if (chinese_dishes[i].is_veg) { %> 
											<img class="vegImg">
										<%}%>
										<% for (var j=0; j<chinese_dishes[i].spice_level; j++){ %>	
											<img class="chiliImg">
										<%}%>
									</div>
										<div class="menu-classic-dot"></div>
										<div class="displayTableCell">$<%= chinese_dishes[i].item_price %></div>
										<div class="menu-item-desc"><%= chinese_dishes[i].item_description %></div>
								</div>
							
							<%}%>
							
						</div>
						<div class="menu-head">Desserts</div>
						<div class="circleRight"></div>
						<div class="foodImgDiv displayTableCell floatRight"><img src="images/Tiramisu.jpg" class="foodImg"></div>
						<div class="menu-items">
							<% for (var i=0; i<dessert_dishes.length; i++){ %>
						
								<div class="menu-item-content">
									<input type="hidden" name="selectedItem" id="selectedItem" value="<%= JSON.stringify(dessert_dishes[i]) %>"/>
									<div class="displayTableCell"><a data-toggle="modal" data-target="#myModal" class="itemNameLink"><%= dessert_dishes[i].item_name %></a>
										<% if (dessert_dishes[i].is_chef_special) { %> 
											<img class="chefImg">
										<%}%>
										<% if (dessert_dishes[i].is_veg) { %> 
											<img class="vegImg">
										<%}%>
										<% for (var j=0; j<dessert_dishes[i].spice_level; j++){ %>	
											<img class="chiliImg">
										<%}%>
									</div>
										<div class="menu-classic-dot"></div>
										<div class="displayTableCell">$<%= dessert_dishes[i].item_price %></div>
										<div class="menu-item-desc"><%= dessert_dishes[i].item_description %></div>
								</div>
							
							<%}%>
							
						</div>
						  
						<div class="foodLabels"><img class="chefImg">&nbsp; Chef's Special &nbsp; &nbsp; &nbsp;| &nbsp; &nbsp; &nbsp;<img class="vegImg">&nbsp; Vegetarian &nbsp; &nbsp; &nbsp;| &nbsp; &nbsp; &nbsp;<img class="chiliImg">&nbsp; Spicy</div>
					</div>
				</div>
			</div>
		</main>
	</div>
	<!-- The Modal -->
	<div class="modal" id="myModal">
		<div class="modal-dialog">
		  <div class="modal-content">
		  
			<!-- Modal Header -->
			<div class="modal-header">
			  <h4 class="modal-title"></h4>
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			
			<!-- Modal body -->
			<div class="modal-body">
			  <div class="modal-desc"></div>
			  <div class="mt10">
				  <label for="qty">Select Quantity</label>
				  <input type="number" name=qty value="1" min="1" max="4" step="1"></input>
				</div>
			</div>
			
			<!-- Modal footer -->
			<div class="modal-footer">
			  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			  <button type="button" id="add-cart-btn" class="btn btn-danger" data-dismiss="modal">Add to Cart</button>
			</div>
			
		  </div>
		</div>
	  </div>
	  <script>
		$("input[type='number']").inputSpinner();
	</script>
</body>
</html>